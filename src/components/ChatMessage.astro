---
// src/components/ChatMessage.astro
const { user, message, badges } = Astro.props;
---

<div class="chat-message">
  <div class="user-info">
    <img src={`/avatars/${user}.png`} alt={`${user} avatar`} class="avatar" />
    <span class="username">{user}</span>
    {badges && badges.map((badge: string) => (
      <span class="badge">{badge}</span>
    ))}
  </div>
  <p class="message">{message}</p>
</div>
<style>
  .chat-message {
  padding: 1rem;
  margin: 0.5rem 0;
  background-color: #ffffff;
  border-radius: 8px;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  max-width: 100%;
  word-wrap: break-word;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-bottom: 0.5rem;
}

.avatar {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  object-fit: cover;
}

.username {
  font-weight: 600;
  color: #333;
  font-size: 1rem;
}

.badge {
  background-color: #f0f0f0;
  color: #666;
  padding: 0.2rem 0.5rem;
  border-radius: 12px;
  font-size: 0.75rem;
  margin-left: 0.25rem;
}

.message {
  margin: 0;
  color: #444;
  font-size: 1rem;
  line-height: 1.4;
}

/* Estilos responsive */
@media (max-width: 768px) {
  .chat-message {
    padding: 0.75rem;
    margin: 0.25rem 0;
  }

  .avatar {
    width: 24px;
    height: 24px;
  }

  .username {
    font-size: 0.9rem;
  }

  .badge {
    font-size: 0.65rem;
    padding: 0.15rem 0.4rem;
  }

  .message {
    font-size: 0.9rem;
  }
}
</style>