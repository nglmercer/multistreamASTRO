---
// src/components/EventMessage.astro
const { user, action, count } = Astro.props;
---

<div class="event-message">
  <img src={`/avatars/${user}.png`} alt={`${user} avatar`} class="avatar" />
  <span class="username">{user}</span>
  <span class="action">{action}</span>
  <span class="count">x{count}</span>
</div>
<style>
  .event-message {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem;
  margin: 0.5rem 0;
  background-color: #f8f9fa;
  border-radius: 6px;
  border-left: 4px solid #007bff;
  font-size: 0.9rem;
  max-width: 100%;
}

.avatar {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  object-fit: cover;
}

.username {
  font-weight: 600;
  color: #333;
}

.action {
  color: #555;
  margin-left: 0.25rem;
}

.count {
  font-weight: 700;
  color: #007bff;
  margin-left: 0.25rem;
  background-color: rgba(0, 123, 255, 0.1);
  padding: 0.1rem 0.4rem;
  border-radius: 10px;
}

/* Estilos responsive */
@media (max-width: 768px) {
  .event-message {
    padding: 0.5rem;
    font-size: 0.85rem;
  }

  .avatar {
    width: 20px;
    height: 20px;
  }

  .count {
    padding: 0.1rem 0.3rem;
  }
}
</style>