---
import { pagesConfigA, pagesConfigB } from '../config/pages';

interface Props {
  title?: string;
  activeConfig?: 'A' | 'B';
}

const { title = "Default Title", activeConfig = 'A' } = Astro.props;
const currentConfig = activeConfig === 'A' ? pagesConfigA : pagesConfigB;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <title>{title}</title>
  </head>
  <body>
    <div class="layout">
      <!-- Mobile Navbar -->
      <nav class="mobile-nav">
        <div class="nav-content">
          <div class="logo">
            <slot name="logo" />
          </div>
          <div class="nav-buttons">
            {
              Object.entries(currentConfig).map(([key, page]) => (
                <a href={`/${page.slot}`} class="nav-link">
                  <i class={page.icon}></i>
                  <span class="nav-text">{page.name}</span>
                </a>
              ))
            }
          </div>
          <div class="login-mobile">
            <slot name="login" />
          </div>
        </div>
      </nav>

      <!-- Desktop Sidebar -->
      <aside class="sidebar">
        <div class="sidebar-content">
          <div class="logo">
            <slot name="logo" />
          </div>
          <div class="nav-buttons">
            {
              Object.entries(currentConfig).map(([key, page]) => (
                <a href={`/${page.slot}`} class="nav-link">
                  <i class={page.icon}></i>
                  <span class="nav-text">{page.name}</span>
                </a>
              ))
            }
          </div>
          <div class="login-desktop">
            <slot name="login" />
          </div>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="main-content">
        <slot />
      </main>
    </div>
  </body>
</html>

<style>
  /* Reset and base styles */
  :root {
    --sidebar-width: 250px;
    --navbar-height: 60px;
    --primary-bg: #ffffff;
    --sidebar-bg: #f8f9fa;
    --border-color: #e9ecef;
    --text-color: #333;
    --hover-bg: #e9ecef;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  }

  .layout {
    min-height: 100vh;
    display: flex;
  }

  /* Sidebar Styles */
  .sidebar {
    width: var(--sidebar-width);
    background-color: var(--sidebar-bg);
    border-right: 1px solid var(--border-color);
    position: fixed;
    height: 100vh;
    padding: 1rem;
  }

  .sidebar-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    height: 100%;
  }

  .logo {
    padding: 1rem 0;
  }

  .nav-buttons {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem 1rem;
    text-decoration: none;
    color: var(--text-color);
    border-radius: 0.5rem;
    transition: background-color 0.2s;
  }

  .nav-link:hover {
    background-color: var(--hover-bg);
  }

  .nav-link i {
    width: 1.5rem;
    text-align: center;
  }

  /* Mobile Navigation */
  .mobile-nav {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: var(--navbar-height);
    background-color: var(--primary-bg);
    border-bottom: 1px solid var(--border-color);
    padding: 0 1rem;
    z-index: 1000;
  }

  .nav-content {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  /* Main Content */
  .main-content {
    flex-grow: 1;
    margin-left: var(--sidebar-width);
    padding: 2rem;
  }

  /* Login sections */
  .login-desktop {
    margin-top: auto;
    padding: 1rem 0;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .sidebar {
      display: none;
    }

    .mobile-nav {
      display: block;
    }

    .main-content {
      margin-left: 0;
      margin-top: var(--navbar-height);
      padding: 1rem;
    }

    .login-mobile {
      display: flex;
      align-items: center;
    }

    .nav-buttons {
      flex-direction: row;
      gap: 0.5rem;
      justify-content: space-between;
    }

    .nav-link {
      flex-direction: column;
      font-size: 0.8rem;
      gap: 0.2rem;
      padding: 0.2rem;
    }

    .nav-link i {
      font-size: 1.2rem;
    }
  }
  @media (max-width: 576px) {
    .nav-link {
      span {
        display: none;
      }
    }
  }
</style>