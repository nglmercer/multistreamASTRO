---
import SidebarLayout from '../layouts/SidebarLayout.astro';
// Importa el componente SolidJS
import ReplacerConfigForm from '../components/replace/ReplacerConfig.jsx';

---

<SidebarLayout title="multistreamASTRO" activeConfig="A">
	<div slot="logo">
		<h1 class="logo-text">Logo</h1>
	</div>

	<div class="content">
    {/* 
      Renderiza el componente SolidJS aquí, pasando los datos iniciales como props.
      client:only="solid-js" asegura que el componente se renderice e hidrate en el cliente.
    */}
    <ReplacerConfigForm 
      client:only="solid-js"

    />
	</div>
</SidebarLayout>

<style is:global>
  /* Puedes mantener estilos globales aquí o moverlos si son específicos del componente */
</style>